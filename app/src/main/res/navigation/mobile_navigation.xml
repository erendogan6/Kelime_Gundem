<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/newsListFragment">


    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.example.kelimegundem.ui.NewsList.NewsListFragment"
        android:label="NewsListFragment" >
        <action
            android:id="@+id/action_newsListFragment_to_newsDetailActivity2"
            app:destination="@id/newsDetailActivity" />
    </fragment>

    <fragment
        android:id="@+id/newsFavoritesFragment"
        android:name="com.example.kelimegundem.ui.NewsFavorites.NewsFavoritesFragment"
        android:label="fragment_news_favorites"
        tools:layout="@layout/fragment_news_favorites" >
        <action
            android:id="@+id/action_newsFavoritesFragment_to_newsDetailActivity"
            app:destination="@id/newsDetailActivity" />
    </fragment>

    <activity
        android:id="@+id/newsDetailActivity"
        android:name="com.example.kelimegundem.ui.NewsDetailActivity"
        android:label="activity_news_detail"
        tools:layout="@layout/activity_news_detail" >
        <argument
            android:name="article"
            app:argType="com.example.kelimegundem.model.Article" />
    </activity>


</navigation>